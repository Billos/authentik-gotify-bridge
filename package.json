{
  "name": "panoptikauth",
  "version": "0.0.1",
  "description": "Panoptikauth - A bridge between Authentik and Gotify for notifications",
  "keywords": [
    "authentik",
    "gotify",
    "bridge",
    "notifications"
  ],
  "license": "ISC",
  "author": "",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "dev": "tsx watch --include 'src/**/*.ts' src/index.ts",
    "docker:build": "docker build --no-cache . -t billos/panoptikauth:latest",
    "format": "prettier . --write",
    "format-check": "prettier . --check",
    "lint": "eslint src",
    "release": "semantic-release --no-ci",
    "release:dry": "semantic-release --dry-run",
    "start": "node dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "express": "^5.2.1",
    "json5": "^2.2.3"
  },
  "devDependencies": {
    "@codedependant/semantic-release-docker": "^5.1.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@stylistic/eslint-plugin": "^5.6.1",
    "@stylistic/eslint-plugin-js": "^4.4.1",
    "@stylistic/eslint-plugin-ts": "^4.4.1",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "eslint": "^9.39.2",
    "prettier": "^3.7.4",
    "prettier-plugin-multiline-arrays": "^4.1.3",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-packagejson": "^2.5.20",
    "semantic-release": "^25.0.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
