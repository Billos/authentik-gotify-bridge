{
  "branches": ["main"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    [
      "@semantic-release/npm",
      {
        "npmPublish": false
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "if [ -f docker-compose.yml ]; then sed -i.bak 's|image: authentik-gotify-bridge:[0-9]\\+\\.[0-9]\\+\\.[0-9]\\+|image: authentik-gotify-bridge:${nextRelease.version}|g' docker-compose.yml && rm -f docker-compose.yml.bak; fi"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["package.json", "CHANGELOG.md", "docker-compose.yml"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "@semantic-release/github"
  ]
}
